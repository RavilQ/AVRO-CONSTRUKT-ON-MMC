<!--================About Company Skill Area =================-->
<section class="about_company_skill_area p_100">
    <div class="container">
        <div class="row company_skill_inner">
            <div class="col-lg-7">
                <div class="company_skill_text">
                    <h4>@Model.Settings["AboutUs_Title"]</h4>
                    <p>
                        @Model.Settings["AboutUs_Text1"]
                    </p>
                    <p>
                        @Model.Settings["AboutUs_Text2"]
                    </p>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="about_company_img">
                    @*<img class="img-fluid" src="~/assets/images/about-us.jpg" alt="asdf" /*@
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End About Company Skill Area =================-->
