@model AboutUsViewModel
<!--================Breadcrumb Area =================-->
<section class="breadcrumb_area">
    <h1>Construction</h1>
    <div class="container">
        <h2>Haqqımızda</h2>
        <ul class="nav">
            <li><a asp-action="index" asp-controller="Home">Ana Səhifə</a></li>
