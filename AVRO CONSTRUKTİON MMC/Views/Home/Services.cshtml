
@model ServiceViewModel

    <!--================Breadcrumb Area =================-->
    <section class="breadcrumb_area">
      <h1>Construction</h1>
      <div class="container">
        <h2>Services</h2>
        <ul class="nav">
          <li><a href="index.html">Home</a></li>
          <li>
            <a class="active" href="services.html">Services</a>
          </li>
        </ul>
      </div>
    </section>
    <!--================End Breadcrumb Area =================-->

    <!--================Service Area =================-->
    <section class="our_service_area p_100">
      <div class="container">
        <div class="main_title">
            <h2>@Model.Setting["OurServices_Title"]</h2>
            <p>
                @Model.Setting["OurServices_Text"]
            </p>
        </div>
        <div class="row service_inner">
          @foreach (var item in Model.Service)
          {
                <div class="col-lg-4 col-md-6">
                    <div class="serive_item">
                        <div class="media">
                            <div class="media-body">
                                <h4>@item.Title</h4>
                                <p>
                                    @item.Text
                                </p>
                            </div>
                            <div class="media-right">
                                <img src="~/assets/images/icon/@item.Icon" alt="" />
                            </div>
                        </div>
                    </div>
                </div>
          }
        </div>
      </div>
    </section>
    <!--================End Service Area =================-->

    <!--================Video Area =================-->
    <section class="video_area">
      <div class="container">
        <div class="video_text">
            <h4>@Model.Setting["OurServicesVideo_Title"]</h4>
            <h3> @Model.Setting["OurServicesVideo_Text1"] <br />@Model.Setting["OurServicesVideo_Text2"]</h3>
          <div class="media">
            <div class="d-flex">
                    <a class="popup-youtube" href="@Model.Setting["OurServiceVideo_Video"]">
                        <i class="flaticon-play-button"></i></a>
            </div>
            <div class="media-body">
               <h5>@Model.Setting["OurServicesVideo_Desc1"]<br />@Model.Setting["OurServicesVideo_Desc2"]</h5>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!--================End Video Area =================-->
