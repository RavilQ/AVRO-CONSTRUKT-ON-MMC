@using AVRO_CONSTRUKTİON_MMC.Areas.Admin.ViewModels.ServiceVMs
@{
    ViewData["Title"] = "Create";
}
@model ServicePostVM


<div class="p-3 w-100">

    <form asp-action="Create" asp-controller="Service" method="post" class="col-sm-6 ">

        <div class="my-3">
            <label asp-for="Title" class="form-label">Başlıq</label>
            <input asp-for="Title" class="form-control col-12" />
            <span asp-validation-for="Title" class="small text-danger"></span>
        </div>
        <div class="my-3">
            <label asp-for="Text" class="form-label">Haqqında</label>
            <input asp-for="Text" class="form-control col-12" />
            <span asp-validation-for="Text" class="small text-danger"></span>
        </div>
        <div class="my-3">
            <label asp-for="Icon" class="form-label">Ikon</label>
            <input asp-for="Icon" class="form-control col-12" />
            <span asp-validation-for="Icon" class="small text-danger"></span>
        </div>
        <button type="submit" class="btn btn-success"> Yarat </button>

    </form>
</div>

